package com.mindcraft.inputvalidationdemo.web.validation;

import jakarta.validation.Constraint;
import jakarta.validation.Payload;

import java.lang.annotation.*;


@Documented
@Repeatable(StringValidator.List.class)
@Constraint(validatedBy = StringValidatorImpl.class)
@Target( { ElementType.METHOD, ElementType.FIELD })
@Retention(RetentionPolicy.RUNTIME)
public @interface StringValidator {

	Type value();
    
	String message() default ("Invalid value"); // Default error message

    Class<?>[] groups() default {};

    Class<? extends Payload>[] payload() default {};
    @Documented
    @Target({ ElementType.METHOD, ElementType.FIELD })
    @Retention(RetentionPolicy.RUNTIME)
    public @interface List {
        StringValidator[] value();
    }

    public  enum Type {
        HTML_VALIDATE,
        ALPHA_NUMERIC,
        ALLOW_SPECIAL_CHAR,
        ONLY_CHARACTER

    }
}
